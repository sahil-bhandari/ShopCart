<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="@color/white"
    tools:context="com.sahil.shopcart.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/lv1"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        android:layout_below="@+id/spinner1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" >


    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:clickable="true"
        android:id="@+id/CartimgV"
        android:longClickable="true"
        android:background="@drawable/ic_shopping_cart_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />



        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/textViewC"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:textStyle="normal|bold"
            android:textColor="@color/cardview_light_background"
            android:layout_alignTop="@+id/CartimgV"
            android:layout_alignEnd="@+id/CartimgV" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/white"
        android:indeterminate="true"
        android:indeterminateTint="#1a09d6"
        android:max="100" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
